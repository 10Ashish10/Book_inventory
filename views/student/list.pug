<h3><a class="btn btn-secondary" href="/student">Create New</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Book Record</h3>

<table class="table table-striped">

    <thead>

        <tr>

            <th>Book Name</th>

            <th>Author</th>

            <th>Publicer</th>

            

            <th>Publication Date</th>

            <th>Price</th>

            <th>Type</th>

            <th></th>

        </tr>

    </thead>

    <tbody>

        {{#each list}}

        <tr>

            <td>{{this.bookName}}</td>

            <td>{{this.author}}</td>

            <td>{{this.publicer}}</td>

            

        <td>{{this.dop}}</td>

            <td>{{this.price}}</td>

            <td>{{this.type}}</td>

            <td>

                <a class="btn btn-primary btn-sm" href="/student/{{this._id}}">Edit</a>

                <a class="btn btn-danger btn-sm" href="/student/delete/{{this._id}}"

                  onclick="return confirm('Are you sure you want to delete this record ?');">Delete</a>

            </td>

        </tr>

        {{/each}}

    </tbody>

</table>